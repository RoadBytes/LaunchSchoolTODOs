<ul id='lists' >
  <% @lists.each do |list| %>
    <li>
      <h2><%= list[:name] %></h2>
      <p><%= list[:todos].size %></p>
      <form action="/lists/<%= list[:name] %>" method="post">
        <input type="submit" value="Delete">
      </form>
    </li>
  <% end %>
</ul>

<a href="/lists/new">New List</a>
